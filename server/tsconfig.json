{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "extensions": [".tsx", ".ts", ".js"],
  "moduleResolution": "node",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@local/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "./src/**/__tests__/**/*",
    "./src/**/__fixtures__/**/*",
    "./src/**/*.test.js",
    "./src/**/*.spec.js",
    "./src/tests",
    "node_modules",
    "dist"
  ]
}
