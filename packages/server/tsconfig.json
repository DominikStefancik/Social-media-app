{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@local/*": ["src/*"]
    },
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "./src/**/*.test.js",
    "./src/**/*.spec.js",
    "./src/tests",
    "dist"
  ]
}
